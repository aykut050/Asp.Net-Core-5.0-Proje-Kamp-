@using EntityLayer.Concrete
@model List<Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            @foreach (var item in Model)
            {
                <div class="card-body">
                    <h4 class="card-title">Writer About</h4>
                    <img src="@item.WriterImage" class="mb-2 mw-100 w-100 rounded" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@item.WriterName</h5>
                        <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
